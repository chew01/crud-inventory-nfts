extends layout 

block content 
    h1.p-3= title

    .p-3
        form(action="", method="post") 
            .mb-3 
                label.form-label(for="nameInput") Name 
                input#nameInput.form-control(type="text", name="name", required, value=(category==undefined ? '' : category.name)) 
            .mb-3 
                label.form-label(for="descriptionInput") Description
                input#descriptionInput.form-control(type="text", name="description", value=(category==undefined ? '' : category.description)) 
            button.btn.btn-primary(type="submit") Submit

        if errors
            ul 
                for error in errors 
                    li= error.msg